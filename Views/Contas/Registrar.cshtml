@model BlogMVC.Models.ViewModels.RegistrarViewModel
<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">
                Registrar
            </h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Nome Usuario</label>
                    <input type="text" id="nomeusuario" class="form-control" asp-for="NomeUsuario"/>
                    <span class="text-danger" asp-validation-for="NomeUsuario"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" asp-for="Email"/>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Senha</label>
                    <input type="password" id="senha" class="form-control" asp-for="Senha"/>
                    <span class="text-danger" asp-validation-for="Senha"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
